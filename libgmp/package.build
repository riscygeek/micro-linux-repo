pkgname=libgmp
pkgver=6.2.1
url="https://gmplib.org/"
description="A free library for arbitrary precision arithmetic"

depends=()

sources=(https://ftp.gnu.org/gnu/gmp/gmp-6.2.1.tar.xz)

prepare() {
   tar -xf "$S/gmp-${pkgver}.tar.xz"
   cd "gmp-${pkgver}"
}

build() {
   ./configure          \
      --prefix=/usr     \
      --enable-static   \
      --enable-shared

   make
}

package() {
   make DESTDIR="$D" install
}
