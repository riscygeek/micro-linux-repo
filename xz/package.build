pkgname=xz
pkgver=5.2.5
url="https://tukaani.org/xz/"
description="Library and command line tools for XZ and LZMA compressed files"
features=()

depends=()

sources=(https://tukaani.org/xz/xz-${pkgver}.tar.xz)

prepare() {
   tar -xf "$S/xz-${pkgver}.tar.xz"
   cd "xz-${pkgver}"
}

build() {
   ./configure          \
      --prefix=/usr     \
      --enable-static   \
      --enable-shared

   make
}

package() {
   make DESTDIR="$D" install
}
